&GLOBAL
  PRINT_LEVEL medium
  PROJECT_NAME CH4
  RUN_TYPE MD
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  STRESS_TENSOR ANALYTICAL
  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
  &SUBSYS
    &CELL
      B 0.0 10.0 0.0
      A 10.0 0.0 0.0
      PERIODIC XYZ
      C 0.0 0.0 10.0
    &END CELL
    &COORD
      H 5.381543386 4.068608007 3.605730142
      H 3.945396557 4.803205689 4.3846884
      H 5.520924283 5.654502853 4.427087378
      H 5.281853047 4.164147552 5.391826568
      C 5.032505926 4.672551599 4.452323412
    &END COORD
    &KIND H
      POTENTIAL GTH-PBE-q1
      BASIS_SET DZVP-MOLOPT-GTH
    &END KIND
    &KIND C
      POTENTIAL GTH-PBE-q4
      BASIS_SET DZVP-MOLOPT-GTH
    &END KIND
  &END SUBSYS
  &DFT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    &MGRID
      CUTOFF 400
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-13
    &END QS
    &XC
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          REFERENCE_FUNCTIONAL PBE
          PARAMETER_FILE_NAME dftd3.dat
          TYPE DFTD3
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &SCF
      EPS_SCF 1e-06
      MAX_SCF 50
      SCF_GUESS RESTART
      &OUTER_SCF
        EPS_SCF 1e-06
        MAX_SCF 15
      &END OUTER_SCF
      &OT
        ENERGY_GAP 0.1
        PRECONDITIONER FULL_SINGLE_INVERSE
        MINIMIZER CG
      &END OT
    &END SCF
  &END DFT
&END FORCE_EVAL

&MOTION
  &MD
    ENSEMBLE NVT  ! sampling the canonical ensemble, accurate properties might need NVE
    TEMPERATURE [K] 300
    TIMESTEP [fs] 1
    STEPS 200
    &THERMOSTAT
      REGION MASSIVE
      TYPE GLE
      &GLE
        NDIM 5
        A_SCALE [ps^-1] 1.00
        A_LIST    1.859575861256e+2   2.726385349840e-1   1.152610045461e+1  -3.641457826260e+1   2.317337581602e+2
        A_LIST   -2.780952471206e-1   8.595159180871e-5   7.218904801765e-1  -1.984453934386e-1   4.240925758342e-1
        A_LIST   -1.482580813121e+1  -7.218904801765e-1   1.359090212128e+0   5.149889628035e+0  -9.994926845099e+0
        A_LIST   -1.037218912688e+1   1.984453934386e-1  -5.149889628035e+0   2.666191089117e+1   1.150771549531e+1
        A_LIST    2.180134636042e+2  -4.240925758342e-1   9.994926845099e+0  -1.150771549531e+1   3.095839456559e+2
      &END GLE
    &END THERMOSTAT
  &END MD
  &PRINT
    &FORCES
      &EACH
        MD 1
      &END EACH
    &END FORCES
    &TRAJECTORY
      &EACH
        MD 1
      &END EACH
    &END TRAJECTORY
    &RESTART
      BACKUP_COPIES 3
      &EACH
        MD 1
      &END EACH
    &END RESTART
  &END PRINT
&END MOTION